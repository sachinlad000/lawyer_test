---
/**
 * Hero Section Component
 * ======================
 * Full-width hero with professional image, tagline, and CTAs.
 *
 * CLIENT EDITABLE: Update headline, subheadline, and contact info.
 */

import { Phone, MessageCircle, Calendar, CheckCircle } from "@lucide/astro";
import TrustBadge from "../ui/TrustBadge.astro";

// CLIENT EDITABLE: Hero content
const content = {
  headline: "Trusted Legal Excellence, Dedicated Advocacy",
  subheadline:
    "Providing expert legal representation in Civil, Criminal, and Corporate Law. Your rights. Our priority.",
  phone: "+91-XXXXXXXXXX",
  whatsapp: "91XXXXXXXXXX",
};

const highlights = [
  "15+ Years of Experience",
  "1000+ Cases Handled",
  "Bar Council Registered",
  "Free Initial Consultation",
];
---

<section class="hero">
  <div class="hero-bg">
    <!-- Background pattern -->
    <div class="hero-pattern"></div>
  </div>

  <div class="container">
    <div class="hero-grid">
      <!-- Content Column -->
      <div class="hero-content" data-animate="animate-slide-in-left">
        <span class="hero-badge">
          <CheckCircle size={16} />
          Advocate in India | High Court & Supreme Court
        </span>

        <h1 class="hero-headline">{content.headline}</h1>

        <p class="hero-subheadline">{content.subheadline}</p>

        <!-- Highlights -->
        <ul class="hero-highlights">
          {
            highlights.map((item) => (
              <li>
                <CheckCircle size={18} class="highlight-icon" />
                {item}
              </li>
            ))
          }
        </ul>

        <!-- CTA Buttons -->
        <div class="hero-ctas">
          <a href="/contact" class="btn btn-accent btn-lg">
            <Calendar size={20} />
            Free Consultation
          </a>
          <a
            href={`tel:${content.phone.replace(/[^0-9+]/g, "")}`}
            class="btn btn-outline-light btn-lg"
          >
            <Phone size={20} />
            Call Now
          </a>
          <a
            href={`https://wa.me/${content.whatsapp}`}
            class="btn btn-whatsapp btn-lg"
            target="_blank"
            rel="noopener noreferrer"
          >
            <MessageCircle size={20} />
            WhatsApp
          </a>
        </div>
      </div>

      <!-- Image Column -->
      <div class="hero-image-wrapper" data-animate="animate-slide-in-right">
        <div class="hero-image-container">
          <!-- Placeholder for professional photo -->
          <div class="hero-image-placeholder">
            <div class="placeholder-content">
              <span class="placeholder-icon">ðŸ‘”</span>
              <span class="placeholder-text">Professional Photo</span>
              <span class="placeholder-size">600x800px recommended</span>
            </div>
          </div>

          <!-- Floating badges -->
          <div class="floating-badge badge-experience">
            <TrustBadge
              type="experience"
              value="15+"
              label="Years Experience"
              variant="compact"
            />
          </div>

          <div class="floating-badge badge-cases">
            <TrustBadge
              type="cases"
              value="1000+"
              label="Cases Handled"
              variant="compact"
            />
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Trust bar -->
  <div class="trust-bar">
    <div class="container">
      <div class="trust-bar-content">
        <div class="trust-item">
          <span class="trust-value">15+</span>
          <span class="trust-label">Years Experience</span>
        </div>
        <div class="trust-divider"></div>
        <div class="trust-item">
          <span class="trust-value">1000+</span>
          <span class="trust-label">Cases Handled</span>
        </div>
        <div class="trust-divider"></div>
        <div class="trust-item">
          <span class="trust-value">95%</span>
          <span class="trust-label">Success Rate</span>
        </div>
        <div class="trust-divider"></div>
        <div class="trust-item">
          <span class="trust-value">500+</span>
          <span class="trust-label">Happy Clients</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    background: linear-gradient(
      135deg,
      var(--color-primary-900) 0%,
      var(--color-primary-700) 100%
    );
    color: white;
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    overflow: hidden;
  }

  .hero-pattern {
    position: absolute;
    inset: 0;
    background-image:
      radial-gradient(
        circle at 20% 50%,
        rgba(212, 175, 55, 0.1) 0%,
        transparent 50%
      ),
      radial-gradient(
        circle at 80% 80%,
        rgba(255, 255, 255, 0.05) 0%,
        transparent 50%
      );
  }

  .hero .container {
    position: relative;
    z-index: 1;
    padding-top: 4rem;
    padding-bottom: 5rem;
  }

  .hero-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    align-items: center;
  }

  @media (min-width: 1024px) {
    .hero-grid {
      grid-template-columns: 1.2fr 1fr;
      gap: 4rem;
    }

    .hero .container {
      padding-top: 5rem;
      padding-bottom: 6rem;
    }
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 9999px;
    font-size: 0.875rem;
    margin-bottom: 1.5rem;
  }

  .hero-headline {
    color: white;
    font-size: clamp(2rem, 5vw, 3.5rem);
    line-height: 1.1;
    margin-bottom: 1.25rem;
  }

  .hero-subheadline {
    font-size: 1.125rem;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.9);
    max-width: 540px;
    margin-bottom: 2rem;
  }

  .hero-highlights {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.75rem 1.5rem;
    list-style: none;
    padding: 0;
    margin: 0 0 2rem;
  }

  .hero-highlights li {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9375rem;
    color: rgba(255, 255, 255, 0.9);
  }

  .highlight-icon {
    color: var(--color-accent-500);
    flex-shrink: 0;
  }

  .hero-ctas {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  @media (max-width: 640px) {
    .hero-ctas {
      flex-direction: column;
    }

    .hero-ctas .btn {
      width: 100%;
      justify-content: center;
    }
  }

  /* Image Section */
  .hero-image-wrapper {
    display: flex;
    justify-content: center;
  }

  .hero-image-container {
    position: relative;
    width: 100%;
    max-width: 400px;
  }

  .hero-image-placeholder {
    aspect-ratio: 3/4;
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.1) 0%,
      rgba(255, 255, 255, 0.05) 100%
    );
    border: 2px dashed rgba(255, 255, 255, 0.3);
    border-radius: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .placeholder-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    color: rgba(255, 255, 255, 0.7);
  }

  .placeholder-icon {
    font-size: 4rem;
    margin-bottom: 1rem;
  }

  .placeholder-text {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .placeholder-size {
    font-size: 0.875rem;
    opacity: 0.7;
  }

  .floating-badge {
    position: absolute;
  }

  .badge-experience {
    top: 10%;
    right: -20px;
    animation: float 3s ease-in-out infinite;
  }

  .badge-cases {
    bottom: 15%;
    left: -20px;
    animation: float 3s ease-in-out infinite 0.5s;
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  @media (max-width: 1024px) {
    .hero-image-wrapper {
      display: none;
    }
  }

  /* Trust Bar */
  .trust-bar {
    background: rgba(0, 0, 0, 0.2);
    padding: 1.5rem 0;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .trust-bar-content {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    gap: 1.5rem 2.5rem;
  }

  .trust-item {
    text-align: center;
  }

  .trust-value {
    display: block;
    font-size: 1.75rem;
    font-weight: 700;
    font-family: var(--font-heading);
    color: var(--color-accent-500);
  }

  .trust-label {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.8);
  }

  .trust-divider {
    width: 1px;
    height: 40px;
    background: rgba(255, 255, 255, 0.2);
  }

  @media (max-width: 768px) {
    .trust-divider {
      display: none;
    }

    .trust-bar-content {
      gap: 1.5rem;
    }

    .trust-item {
      flex: 1 1 40%;
    }
  }
</style>
