---
/**
 * Trust Indicators Section Component
 * ===================================
 * Section displaying key trust metrics.
 */

import { Award, Briefcase, Users, CheckCircle, Scale, Trophy } from '@lucide/astro';

// CLIENT EDITABLE: Trust metrics
const metrics = [
  {
    icon: Award,
    value: "15+",
    label: "Years of Experience",
    description: "Since 2009",
  },
  {
    icon: Briefcase,
    value: "1000+",
    label: "Cases Handled",
    description: "Across All Courts",
  },
  {
    icon: Trophy,
    value: "95%",
    label: "Success Rate",
    description: "Favorable Outcomes",
  },
  {
    icon: Users,
    value: "500+",
    label: "Happy Clients",
    description: "Trusted By Many",
  },
];

const certifications = [
  "Bar Council of India - Registered",
  "High Court Practice License",
  "District Court Practice",
  "Supreme Court Advocate (AOR)",
];
---

<section class="trust-indicators section-padding">
  <div class="container">
    <div class="trust-grid">
      <!-- Metrics -->
      <div class="metrics-section">
        <div class="metrics-grid">
          {metrics.map((metric, index) => (
            <div class="metric-card" data-animate="animate-fade-in-up" style={`animation-delay: ${index * 100}ms`}>
              <div class="metric-icon">
                <metric.icon size={28} />
              </div>
              <div class="metric-value">{metric.value}</div>
              <div class="metric-label">{metric.label}</div>
              <div class="metric-description">{metric.description}</div>
            </div>
          ))}
        </div>
      </div>
      
      <!-- Certifications -->
      <div class="certifications-section" data-animate="animate-fade-in-up">
        <div class="cert-header">
          <Scale size={32} class="cert-icon" />
          <h3 class="cert-title">Verified & Registered</h3>
        </div>
        <ul class="cert-list">
          {certifications.map((cert) => (
            <li>
              <CheckCircle size={18} class="check-icon" />
              {cert}
            </li>
          ))}
        </ul>
        <div class="bar-council-number">
          <span class="bcn-label">Bar Council Registration No.</span>
          <span class="bcn-value">XX/XXXX</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .trust-indicators {
    background: linear-gradient(135deg, var(--color-primary-900) 0%, var(--color-primary-800) 100%);
    color: white;
  }
  
  .trust-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    align-items: center;
  }
  
  @media (min-width: 1024px) {
    .trust-grid {
      grid-template-columns: 2fr 1fr;
      gap: 4rem;
    }
  }
  
  .metrics-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }
  
  @media (min-width: 640px) {
    .metrics-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }
  
  @media (min-width: 1024px) {
    .metrics-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  .metric-card {
    text-align: center;
    padding: 1.5rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 1rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: all var(--transition-base);
  }
  
  .metric-card:hover {
    background: rgba(255, 255, 255, 0.1);
    transform: translateY(-4px);
  }
  
  .metric-icon {
    width: 60px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-accent-500);
    color: var(--color-primary-900);
    border-radius: 50%;
    margin: 0 auto 1rem;
  }
  
  .metric-value {
    font-size: 2.5rem;
    font-weight: 700;
    font-family: var(--font-heading);
    color: var(--color-accent-500);
    line-height: 1;
    margin-bottom: 0.5rem;
  }
  
  .metric-label {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 0.25rem;
  }
  
  .metric-description {
    font-size: 0.875rem;
    opacity: 0.75;
  }
  
  /* Certifications */
  .certifications-section {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 1rem;
    padding: 2rem;
  }
  
  .cert-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1.5rem;
  }
  
  .cert-icon {
    color: var(--color-accent-500);
  }
  
  .cert-title {
    color: white;
    font-size: 1.25rem;
    margin: 0;
  }
  
  .cert-list {
    list-style: none;
    padding: 0;
    margin: 0 0 1.5rem;
  }
  
  .cert-list li {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    font-size: 0.9375rem;
  }
  
  .cert-list li:last-child {
    border-bottom: none;
  }
  
  .check-icon {
    color: var(--color-accent-500);
    flex-shrink: 0;
  }
  
  .bar-council-number {
    background: var(--color-accent-500);
    color: var(--color-primary-900);
    padding: 1rem;
    border-radius: 0.5rem;
    text-align: center;
  }
  
  .bcn-label {
    display: block;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.25rem;
  }
  
  .bcn-value {
    font-size: 1.25rem;
    font-weight: 700;
    font-family: var(--font-heading);
  }
</style>
