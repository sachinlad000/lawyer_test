---
/**
 * Footer Component
 * ================
 * Footer with contact info, quick links, and mandatory legal disclaimer.
 * 
 * CLIENT EDITABLE: Update contact information and social links below.
 */

import { Scale, MapPin, Phone, Mail, Clock, Facebook, Linkedin, Twitter } from '@lucide/astro';

// CLIENT EDITABLE: Footer configuration
const config = {
  phone: "+91-XXXXXXXXXX",
  email: "contact@yourdomain.com",
  address: "123, Law Chambers, High Court Road, City, State - 400001",
  hours: "Mon - Sat: 9:00 AM - 7:00 PM",
  barCouncilNo: "XX/XXXX", // Your Bar Council Registration Number
  socialLinks: {
    facebook: "https://facebook.com/yourpage",
    linkedin: "https://linkedin.com/in/yourprofile",
    twitter: "https://twitter.com/yourhandle",
  }
};

const quickLinks = [
  { label: 'Home', href: '/' },
  { label: 'About', href: '/about' },
  { label: 'Practice Areas', href: '/practice-areas' },
  { label: 'Portfolio', href: '/portfolio' },
  { label: 'Testimonials', href: '/testimonials' },
  { label: 'Blog', href: '/blog' },
  { label: 'Contact', href: '/contact' },
];

const practiceAreas = [
  { label: 'Civil Law', href: '/practice-areas#civil' },
  { label: 'Criminal Law', href: '/practice-areas#criminal' },
  { label: 'Corporate Law', href: '/practice-areas#corporate' },
  { label: 'Family Law', href: '/practice-areas#family' },
  { label: 'Property Law', href: '/practice-areas#property' },
];

const legalLinks = [
  { label: 'Privacy Policy', href: '/privacy' },
  { label: 'Terms of Use', href: '/terms' },
  { label: 'Disclaimer', href: '/disclaimer' },
];

const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <!-- Main Footer -->
  <div class="footer-main">
    <div class="container">
      <div class="footer-grid">
        <!-- About Column -->
        <div class="footer-col footer-about">
          <a href="/" class="footer-logo">
            <Scale size={32} class="logo-icon" />
            <div class="logo-text">
              <span class="logo-name">Advocate Sharma</span>
              <span class="logo-tagline">& Associates</span>
            </div>
          </a>
          <p class="footer-description">
            Providing expert legal representation with integrity and dedication. 
            Committed to protecting your rights and achieving the best possible outcome for your case.
          </p>
          <div class="bar-council-badge">
            <Scale size={20} />
            <div>
              <span class="badge-label">Bar Council Registered</span>
              <span class="badge-number">Reg. No: {config.barCouncilNo}</span>
            </div>
          </div>
        </div>
        
        <!-- Quick Links -->
        <div class="footer-col">
          <h4 class="footer-title">Quick Links</h4>
          <ul class="footer-links">
            {quickLinks.map((link) => (
              <li><a href={link.href}>{link.label}</a></li>
            ))}
          </ul>
        </div>
        
        <!-- Practice Areas -->
        <div class="footer-col">
          <h4 class="footer-title">Practice Areas</h4>
          <ul class="footer-links">
            {practiceAreas.map((link) => (
              <li><a href={link.href}>{link.label}</a></li>
            ))}
          </ul>
        </div>
        
        <!-- Contact Info -->
        <div class="footer-col">
          <h4 class="footer-title">Contact Us</h4>
          <ul class="contact-list">
            <li>
              <MapPin size={18} />
              <span set:html={config.address.replace(', ', ',<br>')} />
            </li>
            <li>
              <Phone size={18} />
              <a href={`tel:${config.phone.replace(/[^0-9+]/g, '')}`}>{config.phone}</a>
            </li>
            <li>
              <Mail size={18} />
              <a href={`mailto:${config.email}`}>{config.email}</a>
            </li>
            <li>
              <Clock size={18} />
              <span>{config.hours}</span>
            </li>
          </ul>
          
          <!-- Social Links -->
          <div class="social-links">
            <a href={config.socialLinks.facebook} target="_blank" rel="noopener noreferrer" aria-label="Facebook">
              <Facebook size={20} />
            </a>
            <a href={config.socialLinks.linkedin} target="_blank" rel="noopener noreferrer" aria-label="LinkedIn">
              <Linkedin size={20} />
            </a>
            <a href={config.socialLinks.twitter} target="_blank" rel="noopener noreferrer" aria-label="Twitter">
              <Twitter size={20} />
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Legal Disclaimer -->
  <div class="footer-disclaimer">
    <div class="container">
      <p>
        <strong>Disclaimer:</strong> The information provided on this website does not constitute legal advice. 
        No attorney-client relationship is created by accessing or using this website. 
        The outcome of past cases does not guarantee similar results in future cases. 
        Please consult with our office for advice regarding your specific situation.
        <a href="/disclaimer">Read Full Disclaimer</a>
      </p>
    </div>
  </div>
  
  <!-- Bottom Bar -->
  <div class="footer-bottom">
    <div class="container">
      <div class="footer-bottom-content">
        <p class="copyright">
          &copy; {currentYear} Advocate Sharma & Associates. All rights reserved.
        </p>
        <ul class="legal-links">
          {legalLinks.map((link) => (
            <li><a href={link.href}>{link.label}</a></li>
          ))}
        </ul>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--color-primary-900);
    color: white;
  }
  
  .footer-main {
    padding: 4rem 0 3rem;
  }
  
  .footer-grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 2.5rem;
  }
  
  @media (min-width: 640px) {
    .footer-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (min-width: 1024px) {
    .footer-grid {
      grid-template-columns: 1.5fr 1fr 1fr 1.25fr;
    }
  }
  
  .footer-logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: white;
    margin-bottom: 1.25rem;
  }
  
  .footer-logo:hover {
    color: white;
  }
  
  .footer-logo .logo-icon {
    color: var(--color-accent-500);
  }
  
  .logo-text {
    display: flex;
    flex-direction: column;
    line-height: 1.2;
  }
  
  .logo-name {
    font-family: var(--font-heading);
    font-size: 1.25rem;
    font-weight: 700;
  }
  
  .logo-tagline {
    font-size: 0.75rem;
    opacity: 0.8;
  }
  
  .footer-description {
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.9375rem;
    line-height: 1.7;
    margin-bottom: 1.5rem;
  }
  
  .bar-council-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
    background: rgba(212, 175, 55, 0.15);
    border: 1px solid var(--color-accent-500);
    border-radius: 0.5rem;
  }
  
  .bar-council-badge svg {
    color: var(--color-accent-500);
    flex-shrink: 0;
  }
  
  .badge-label {
    display: block;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    opacity: 0.8;
  }
  
  .badge-number {
    display: block;
    font-weight: 600;
    color: var(--color-accent-500);
  }
  
  .footer-title {
    color: white;
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 1.25rem;
    padding-bottom: 0.75rem;
    border-bottom: 2px solid var(--color-accent-500);
    display: inline-block;
  }
  
  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .footer-links li {
    margin-bottom: 0.75rem;
  }
  
  .footer-links a {
    color: rgba(255, 255, 255, 0.8);
    transition: all var(--transition-fast);
    font-size: 0.9375rem;
  }
  
  .footer-links a:hover {
    color: var(--color-accent-500);
    padding-left: 0.25rem;
  }
  
  .contact-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .contact-list li {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    margin-bottom: 1rem;
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.9375rem;
  }
  
  .contact-list svg {
    color: var(--color-accent-500);
    flex-shrink: 0;
    margin-top: 0.125rem;
  }
  
  .contact-list a {
    color: rgba(255, 255, 255, 0.8);
  }
  
  .contact-list a:hover {
    color: var(--color-accent-500);
  }
  
  .social-links {
    display: flex;
    gap: 0.75rem;
    margin-top: 1.5rem;
  }
  
  .social-links a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.1);
    color: white;
    border-radius: 50%;
    transition: all var(--transition-fast);
  }
  
  .social-links a:hover {
    background: var(--color-accent-500);
    color: var(--color-primary-900);
    transform: translateY(-3px);
  }
  
  .footer-disclaimer {
    background: rgba(0, 0, 0, 0.2);
    padding: 1.25rem 0;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .footer-disclaimer p {
    font-size: 0.8125rem;
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.7;
    text-align: center;
  }
  
  .footer-disclaimer a {
    color: var(--color-accent-500);
    text-decoration: underline;
    margin-left: 0.25rem;
  }
  
  .footer-disclaimer a:hover {
    color: var(--color-accent-400);
  }
  
  .footer-bottom {
    padding: 1.25rem 0;
  }
  
  .footer-bottom-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    text-align: center;
  }
  
  @media (min-width: 768px) {
    .footer-bottom-content {
      flex-direction: row;
      justify-content: space-between;
    }
  }
  
  .copyright {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.7);
    margin: 0;
  }
  
  .legal-links {
    display: flex;
    gap: 1.5rem;
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .legal-links a {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.7);
  }
  
  .legal-links a:hover {
    color: var(--color-accent-500);
  }
</style>
