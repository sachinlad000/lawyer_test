---
/**
 * About Page
 * ==========
 * Professional biography, credentials, and "Why Choose Us" section.
 * 
 * CLIENT EDITABLE: Update all personal and professional information.
 */

import Layout from '../layouts/Layout.astro';
import TrustBadge from '../components/ui/TrustBadge.astro';
import { 
  GraduationCap, Briefcase, Award, Users, Scale, MapPin, 
  CheckCircle, Building, Languages, Heart, Target
} from '@lucide/astro';

// CLIENT EDITABLE: Personal information
const advocate = {
  name: "Advocate [Your Name]",
  title: "Senior Advocate",
  tagline: "Fighting for Justice with Integrity & Excellence",
  barCouncilNumber: "XX/XXXX",
  yearStarted: 2009,
  experience: new Date().getFullYear() - 2009,
  bio: [
    "With over 15 years of dedicated legal practice, Advocate Sharma has established himself as a trusted name in the legal community. His journey in law began with a deep-rooted belief in justice and a commitment to serving those in need of legal protection.",
    "After completing his LL.B. from a prestigious law university, he went on to obtain his LL.M. with specialization in Constitutional Law. His academic excellence was complemented by practical training under senior advocates at the High Court.",
    "Today, he leads a team of dedicated legal professionals at Advocate Sharma & Associates, providing comprehensive legal services across Civil, Criminal, and Corporate Law. His client-centric approach and meticulous attention to detail have resulted in a remarkable 95% success rate across handled cases."
  ],
  education: [
    { degree: "LL.M. (Constitutional Law)", institution: "University Name", year: "2011" },
    { degree: "LL.B.", institution: "University Name", year: "2009" },
    { degree: "B.A. (Political Science)", institution: "University Name", year: "2006" },
  ],
  courts: [
    "Supreme Court of India (through AOR)",
    "High Court of [State]",
    "District & Sessions Courts",
    "Family Courts",
    "Consumer Forums",
    "Various Tribunals & Commissions"
  ],
  affiliations: [
    "Bar Council of India",
    "State Bar Association",
    "District Bar Association",
    "Indian Law Society",
  ],
  languages: ["English", "Hindi", "Regional Language"],
};

const whyChooseUs = [
  {
    icon: Award,
    title: "15+ Years Experience",
    description: "Over a decade and a half of dedicated legal practice across multiple domains."
  },
  {
    icon: Users,
    title: "Client-Centric Approach",
    description: "Personalized attention to every client with transparent communication throughout."
  },
  {
    icon: Target,
    title: "95% Success Rate",
    description: "Proven track record of favorable outcomes in civil, criminal, and corporate matters."
  },
  {
    icon: Scale,
    title: "Ethical Practice",
    description: "Unwavering commitment to professional ethics and client confidentiality."
  },
  {
    icon: Heart,
    title: "Affordable Services",
    description: "Competitive fee structure with flexible payment options and no hidden costs."
  },
  {
    icon: Building,
    title: "Multi-Court Practice",
    description: "Representation across all levels from District Courts to High Courts."
  }
];

// Schema markup
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://yourdomain.com" },
    { "@type": "ListItem", "position": 2, "name": "About", "item": "https://yourdomain.com/about" }
  ]
};

const personSchema = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": advocate.name,
  "jobTitle": advocate.title,
  "description": advocate.tagline,
  "knowsLanguage": advocate.languages,
  "alumniOf": advocate.education.map(edu => ({
    "@type": "EducationalOrganization",
    "name": edu.institution
  })),
  "memberOf": advocate.affiliations.map(aff => ({
    "@type": "Organization",
    "name": aff
  })),
  "hasCredential": {
    "@type": "EducationalOccupationalCredential",
    "credentialCategory": "Bar Council Registration",
    "recognizedBy": {
      "@type": "Organization",
      "name": "Bar Council of India"
    }
  }
};
---

<Layout 
  title="About Us"
  description="Learn about Advocate Sharma - 15+ years of experience in Civil, Criminal & Corporate Law. Bar Council registered with a 95% success rate."
  keywords="about advocate, lawyer biography, legal experience, bar council registered, high court advocate"
>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(personSchema)} />
  </Fragment>

  <!-- Page Header -->
  <section class="page-header">
    <div class="container">
      <nav class="breadcrumb">
        <a href="/">Home</a>
        <span>/</span>
        <span>About</span>
      </nav>
      <h1 class="page-title">About Us</h1>
      <p class="page-subtitle">{advocate.tagline}</p>
    </div>
  </section>

  <!-- Main About Section -->
  <section class="about-main section-padding">
    <div class="container">
      <div class="about-grid">
        <!-- Image Column -->
        <div class="about-image-col" data-animate="animate-slide-in-left">
          <div class="about-image-container">
            <div class="image-placeholder">
              <span class="placeholder-icon">üë®‚Äç‚öñÔ∏è</span>
              <span class="placeholder-text">Professional Portrait</span>
              <span class="placeholder-size">600x800px recommended</span>
            </div>
          </div>
          
          <!-- Badges -->
          <div class="about-badges">
            <TrustBadge type="experience" value={`${advocate.experience}+`} label="Years Experience" variant="compact" />
            <TrustBadge type="verified" value="Verified" label="Bar Council" variant="compact" />
          </div>
        </div>
        
        <!-- Content Column -->
        <div class="about-content-col" data-animate="animate-slide-in-right">
          <span class="section-subtitle">Meet Our Founder</span>
          <h2 class="about-name">{advocate.name}</h2>
          <p class="about-title">{advocate.title}</p>
          
          <div class="bar-badge">
            <Scale size={20} />
            <span>Bar Council Reg. No: {advocate.barCouncilNumber}</span>
          </div>
          
          <div class="about-bio">
            {advocate.bio.map((paragraph) => (
              <p>{paragraph}</p>
            ))}
          </div>
          
          <!-- Languages -->
          <div class="languages-section">
            <Languages size={20} class="lang-icon" />
            <span class="lang-label">Languages:</span>
            <span class="lang-list">{advocate.languages.join(", ")}</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Education & Courts -->
  <section class="credentials section-padding">
    <div class="container">
      <div class="credentials-grid">
        <!-- Education -->
        <div class="credential-card" data-animate="animate-fade-in-up">
          <div class="card-header">
            <GraduationCap size={28} />
            <h3>Education</h3>
          </div>
          <ul class="credential-list">
            {advocate.education.map((edu) => (
              <li>
                <span class="edu-degree">{edu.degree}</span>
                <span class="edu-institution">{edu.institution}</span>
                <span class="edu-year">{edu.year}</span>
              </li>
            ))}
          </ul>
        </div>
        
        <!-- Courts -->
        <div class="credential-card" data-animate="animate-fade-in-up" style="animation-delay: 100ms;">
          <div class="card-header">
            <Building size={28} />
            <h3>Courts Practiced</h3>
          </div>
          <ul class="courts-list">
            {advocate.courts.map((court) => (
              <li>
                <CheckCircle size={18} class="check-icon" />
                {court}
              </li>
            ))}
          </ul>
        </div>
        
        <!-- Affiliations -->
        <div class="credential-card" data-animate="animate-fade-in-up" style="animation-delay: 200ms;">
          <div class="card-header">
            <Briefcase size={28} />
            <h3>Professional Affiliations</h3>
          </div>
          <ul class="affiliations-list">
            {advocate.affiliations.map((affiliation) => (
              <li>
                <CheckCircle size={18} class="check-icon" />
                {affiliation}
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="why-choose section-padding">
    <div class="container">
      <div class="section-header" data-animate="animate-fade-in-up">
        <span class="section-subtitle">Why Us</span>
        <h2 class="section-title">Why Choose Us</h2>
        <p class="section-description">
          What sets Advocate Sharma & Associates apart from others
        </p>
      </div>
      
      <div class="why-grid">
        {whyChooseUs.map((item, index) => (
          <div class="why-card" data-animate="animate-fade-in-up" style={`animation-delay: ${index * 100}ms;`}>
            <div class="why-icon">
              <item.icon size={28} />
            </div>
            <h4 class="why-title">{item.title}</h4>
            <p class="why-description">{item.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="about-cta">
    <div class="container">
      <div class="cta-content" data-animate="animate-fade-in-up">
        <h2>Ready to Discuss Your Case?</h2>
        <p>Schedule a free consultation to explore how we can help you.</p>
        <a href="/contact" class="btn btn-accent btn-lg">Get Free Consultation</a>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Page Header */
  .page-header {
    background: linear-gradient(135deg, var(--color-primary-900) 0%, var(--color-primary-700) 100%);
    color: white;
    padding: 3rem 0 4rem;
    text-align: center;
  }
  
  .breadcrumb {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    margin-bottom: 1rem;
    font-size: 0.875rem;
  }
  
  .breadcrumb a {
    color: rgba(255, 255, 255, 0.7);
  }
  
  .breadcrumb a:hover {
    color: var(--color-accent-500);
  }
  
  .breadcrumb span {
    color: rgba(255, 255, 255, 0.5);
  }
  
  .breadcrumb span:last-child {
    color: var(--color-accent-500);
  }
  
  .page-title {
    color: white;
    font-size: clamp(2rem, 5vw, 3rem);
    margin-bottom: 0.5rem;
  }
  
  .page-subtitle {
    font-size: 1.125rem;
    color: rgba(255, 255, 255, 0.9);
    max-width: 600px;
    margin: 0 auto;
  }
  
  /* About Main */
  .about-main {
    background: white;
  }
  
  .about-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    align-items: start;
  }
  
  @media (min-width: 1024px) {
    .about-grid {
      grid-template-columns: 400px 1fr;
      gap: 4rem;
    }
  }
  
  .about-image-container {
    position: relative;
    margin-bottom: 1.5rem;
  }
  
  .image-placeholder {
    aspect-ratio: 3/4;
    background: linear-gradient(135deg, var(--color-neutral-100) 0%, var(--color-neutral-200) 100%);
    border: 2px dashed var(--color-neutral-300);
    border-radius: 1rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: var(--color-neutral-500);
  }
  
  .placeholder-icon {
    font-size: 4rem;
    margin-bottom: 1rem;
  }
  
  .placeholder-text {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }
  
  .placeholder-size {
    font-size: 0.875rem;
    opacity: 0.7;
  }
  
  .about-badges {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }
  
  .about-content-col .section-subtitle {
    display: inline-block;
  }
  
  .about-name {
    font-size: 2rem;
    margin-bottom: 0.25rem;
  }
  
  .about-title {
    font-size: 1.125rem;
    color: var(--color-accent-600);
    font-weight: 600;
    margin-bottom: 1rem;
  }
  
  .bar-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--color-primary-100);
    color: var(--color-primary-900);
    border-radius: 0.5rem;
    font-size: 0.875rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
  }
  
  .about-bio p {
    color: var(--color-neutral-600);
    line-height: 1.8;
    margin-bottom: 1rem;
  }
  
  .languages-section {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem;
    background: var(--color-neutral-100);
    border-radius: 0.5rem;
    margin-top: 1.5rem;
  }
  
  .lang-icon {
    color: var(--color-accent-500);
  }
  
  .lang-label {
    font-weight: 600;
    color: var(--color-neutral-700);
  }
  
  .lang-list {
    color: var(--color-neutral-600);
  }
  
  /* Credentials */
  .credentials {
    background: var(--color-neutral-100);
  }
  
  .credentials-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }
  
  @media (min-width: 768px) {
    .credentials-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
    }
  }
  
  .credential-card {
    background: white;
    border-radius: 1rem;
    padding: 2rem;
    box-shadow: var(--shadow-md);
  }
  
  .card-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid var(--color-accent-500);
  }
  
  .card-header svg {
    color: var(--color-accent-500);
  }
  
  .card-header h3 {
    font-size: 1.25rem;
    margin: 0;
  }
  
  .credential-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .credential-list li {
    padding: 0.75rem 0;
    border-bottom: 1px solid var(--color-neutral-100);
  }
  
  .credential-list li:last-child {
    border-bottom: none;
  }
  
  .edu-degree {
    display: block;
    font-weight: 600;
    color: var(--color-neutral-800);
  }
  
  .edu-institution {
    display: block;
    font-size: 0.875rem;
    color: var(--color-neutral-500);
  }
  
  .edu-year {
    display: inline-block;
    padding: 0.125rem 0.5rem;
    background: var(--color-accent-100);
    color: var(--color-accent-700);
    font-size: 0.75rem;
    font-weight: 600;
    border-radius: 0.25rem;
    margin-top: 0.25rem;
  }
  
  .courts-list,
  .affiliations-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .courts-list li,
  .affiliations-list li {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0;
    color: var(--color-neutral-700);
    font-size: 0.9375rem;
  }
  
  .check-icon {
    color: var(--color-accent-500);
    flex-shrink: 0;
  }
  
  /* Why Choose Us */
  .why-choose {
    background: white;
  }
  
  .why-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }
  
  @media (min-width: 640px) {
    .why-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (min-width: 1024px) {
    .why-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
    }
  }
  
  .why-card {
    padding: 2rem;
    background: var(--color-neutral-50);
    border-radius: 1rem;
    text-align: center;
    transition: all var(--transition-base);
    border: 2px solid transparent;
  }
  
  .why-card:hover {
    background: white;
    border-color: var(--color-accent-500);
    box-shadow: var(--shadow-lg);
    transform: translateY(-4px);
  }
  
  .why-icon {
    width: 64px;
    height: 64px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-primary-100);
    color: var(--color-primary-900);
    border-radius: 50%;
    margin: 0 auto 1.25rem;
    transition: all var(--transition-fast);
  }
  
  .why-card:hover .why-icon {
    background: var(--color-accent-500);
    color: var(--color-primary-900);
  }
  
  .why-title {
    font-size: 1.125rem;
    margin-bottom: 0.5rem;
  }
  
  .why-description {
    font-size: 0.9375rem;
    color: var(--color-neutral-600);
    margin: 0;
  }
  
  /* CTA */
  .about-cta {
    background: linear-gradient(135deg, var(--color-primary-900) 0%, var(--color-primary-700) 100%);
    color: white;
    padding: 4rem 0;
  }
  
  .about-cta .cta-content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }
  
  .about-cta h2 {
    color: white;
    font-size: clamp(1.5rem, 4vw, 2rem);
    margin-bottom: 1rem;
  }
  
  .about-cta p {
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 2rem;
  }
</style>
